{
    "name": "j13k/yaml-lint",
    "description": "A compact command line utility for checking YAML file syntax",
    "keywords": [
        "yaml",
        "yml",
        "lint",
        "syntax",
        "cli",
        "utility",
        "symfony"
    ],
    "homepage": "https://github.com/j13k/yaml-lint",
    "license": "MIT",
    "authors": [
        {
            "name": "John Fitzpatrick",
            "homepage": "http://github.com/j13k"
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "symfony/yaml": "^2|^3|^4|^5"
    },
    "require-dev": {
        "phpstan/phpstan": "^0",
        "phpunit/phpunit": "^9",
        "symplify/easy-coding-standard": "^7"
    },
    "autoload": {
        "psr-4": {
            "J13k\\": "src/J13k"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    },
    "bin": [
        "bin/yaml-lint"
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "style": "./vendor/bin/ecs check ."
    }
}
